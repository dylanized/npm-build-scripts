{
  "name": "npm-build-scripts",
  "version": "1.0.0",
  "description": "Build system examples using NPM Scripts",
  "main": "",
  "scripts": {
    "lint:css": "sass-lint 'src/scss/**' --verbose --no-exit",
    "build:css": "node-sass --source-map true --output-style compressed src/scss/bootstrap.scss tmp/bootstrap.css",
    "build:js": "babel src/es6/1.js src/es6/2.js --presets=es2015 | uglifyjs -o tmp/bundle.js -c -m",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "onchange 'src/scss/**' -- npm run build:css",
    "watch:js": "onchange 'src/es6/**' -- npm run build:js",
    "watch": "onchange 'src/**' -- npm run build",
    "clean": "rm -f tmp/*.*"
  },
  "author": "dylanized",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "node-sass": "^4.5.2"
  },
  "devDependencies": {
    "onchange": "^3.2.1",
    "sass-lint": "^1.10.2"
  }
}
