{
  "name": "npm-build-scripts",
  "version": "1.0.0",
  "description": "Build system examples using NPM Scripts",
  "main": "",
  "scripts": {
    "CSS": "=================================================",
    "build:css": "uglifycss src/css/reset.css src/css/simplegrid.css > tmp/bundle.css",
    "lint:css": "csslint src/css",
    "watch:css": "onchange 'src/css/**' -- npm run build:css",
    "SCSS": "================================================",
    "lint:scss": "sass-lint 'src/scss/**' --verbose --no-exit",
    "build:scss": "node-sass --source-map true --output-style compressed src/scss/bootstrap.scss tmp/bootstrap.css",
    "watch:scss": "onchange 'src/scss/**' -- npm run build:css",
    "ES6": "=================================================",
    "build:es6": "babel src/es6/1.js src/es6/2.js --presets=es2015 | uglifyjs -o tmp/bundle.js -c -m",
    "watch:es6": "onchange 'src/es6/**' -- npm run build:es6",
    "ALL": "=================================================",
    "build": "npm run build:scss && npm run build:es6",
    "watch": "onchange 'src/**' -- npm run build",
    "clean": "rm -f tmp/*.*"
  },
  "author": "dylanized",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "node-sass": "^4.5.2",
    "uglifycss": "0.0.25"
  },
  "devDependencies": {
    "csslint": "^1.0.5",
    "onchange": "^3.2.1",
    "sass-lint": "^1.10.2"
  }
}
