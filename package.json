{
  "name": "npm-build-scripts",
  "version": "1.0.0",
  "description": "Build system examples using NPM Scripts",
  "main": "",
  "scripts": {
    "CSS": "=================================================",
    "build:css": "uglifycss src/css/reset.css src/css/simplegrid.css > tmp/bundle.css",
    "watch:css": "onchange 'src/css/**' -- npm run build:css",
    "lint:css": "csslint src/css",
    "JS": "=================================================",
    "build:js": "uglifyjs src/js/1.js src/js/2.js -o tmp/bundle.js -c -m --source-map tmp/bundle.js.map",
    "watch:js": "onchange 'src/js/**' -- npm run build:js",
    "lint:js": "eslint '.' --ext '.js, .json'  --ignore-pattern 'src/es6' --ignore-pattern 'tmp'",
    "SCSS": "================================================",
    "build:scss": "node-sass --source-map true --output-style compressed src/scss/bootstrap.scss tmp/bootstrap.css",
    "watch:scss": "onchange 'src/scss/**' -- npm run build:css",
    "lint:scss": "sass-lint 'src/scss/**' --verbose --no-exit",
    "ES6": "=================================================",
    "build:es6": "babel src/es6/1.js src/es6/2.js --presets=es2015 | uglifyjs -o tmp/es6.js -c -m",
    "watch:es6": "onchange 'src/es6/**' -- npm run build:es6",
    "ALL": "=================================================",
    "build": "npm-run-all clean build:css build:js build:scss build:es6",
    "watch": "onchange 'src/**' -- npm run build",
    "clean": "rm -f tmp/*.*"
  },
  "author": "dylanized",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "uglifycss": "0.0.25"
  },
  "devDependencies": {
    "csslint": "^1.0.5",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-json": "^1.2.0",
    "onchange": "^3.2.1",
    "sass-lint": "^1.10.2"
  }
}
